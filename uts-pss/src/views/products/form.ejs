<h2><%= action === 'create' ? 'Tambah' : 'Edit' %> Produk</h2>
<form method="post" action="<%= action==='create' ? '/products' : '/products/' + item.id + '?_method=PUT' %>">
  <div class="mb-3">
    <label class="form-label">Nama</label>
    <input class="form-control" name="name" value="<%= item.name || '' %>" required />
  </div>
  <div class="mb-3">
    <label class="form-label">SKU</label>
    <input class="form-control" name="sku" value="<%= item.sku || '' %>" required />
  </div>
  <div class="mb-3">
    <label class="form-label">Harga</label>
    <input type="number" step="0.01" class="form-control" name="price" value="<%= item.price || 0 %>" required />
  </div>
  <div class="mb-3">
    <label class="form-label">Stok</label>
    <input type="number" class="form-control" name="stock" value="<%= item.stock || 0 %>" required />
  </div>
  <div class="d-flex gap-2">
    <button class="btn btn-primary" type="submit">Simpan</button>
    <a class="btn btn-secondary" href="/products">Batal</a>
  </div>
</form>
