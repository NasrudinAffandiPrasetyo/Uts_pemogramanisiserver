<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>User</h2>
  <a class="btn btn-success" href="/users/new">Tambah User</a>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th><th>Nama</th><th>Email</th><th>Role</th><th>Aksi</th>
    </tr>
  </thead>
  <tbody>
  <% items.forEach(u => { %>
    <tr>
      <td><%= u.id %></td>
      <td><%= u.name %></td>
      <td><%= u.email %></td>
      <td><%= u.role %></td>
      <td class="d-flex gap-2">
        <a class="btn btn-sm btn-primary" href="/users/<%= u.id %>/edit">Edit</a>
        <form method="POST" action="/users/<%= u.id %>?_method=DELETE" onsubmit="return confirm('Hapus user ini?')">
          <button class="btn btn-sm btn-danger">Hapus</button>
        </form>
      </td>
    </tr>
  <% }) %>
  </tbody>
</table>
