<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Produk</h2>
  <a class="btn btn-success" href="/products/new">Tambah Produk</a>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th><th>Nama</th><th>SKU</th><th>Harga</th><th>Stok</th><th>Aksi</th>
    </tr>
  </thead>
  <tbody>
  <% items.forEach(p => { %>
    <tr>
      <td><%= p.id %></td>
      <td><%= p.name %></td>
      <td><%= p.sku %></td>
      <td>Rp <%= Number(p.price).toLocaleString('id-ID') %></td>
      <td><%= p.stock %></td>
      <td class="d-flex gap-2">
        <a class="btn btn-sm btn-primary" href="/products/<%= p.id %>/edit">Edit</a>
      <form method="POST" action="/products/<%= p.id %>?_method=DELETE" onsubmit="return confirm('Hapus produk ini?')">
        <button class="btn btn-sm btn-danger">Hapus</button>
      </form>
      </td>
    </tr>
  <% }) %>
  </tbody>
</table>
